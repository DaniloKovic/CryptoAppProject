<Window x:Class="CryptoAppWPFProject.DigitalCertificateInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoAppWPFProject"
        mc:Ignorable="d"
        Title="Digital Certificate Input" Height="160" Width="300">
    <Grid AllowDrop="True" Drop="OnFileDrop">
        <StackPanel Orientation="Vertical" Margin="10,10,10,10" HorizontalAlignment="Center">
            <Label x:Name="lbDigitalCertificate" Content="Choose Digital Certificate on file system:" />
            <TextBox x:Name="tbUsernameReg" Width="250" Height="90" BorderThickness="4" HorizontalAlignment="Stretch" />
        </StackPanel>
    </Grid>
</Window>
